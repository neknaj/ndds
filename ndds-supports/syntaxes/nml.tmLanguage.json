{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "neknaj markup language",
	"patterns": [
        {
            "include": "#nml"
        }
	],
	"repository": {
        "nml": {
            "patterns": [
				{
					"include": "#inlinefunccall"
				},
                {
                    "name": "meta.embedded",
                    "begin": "^((    )*)(>>\\$) ([a-zA-Z_][a-zA-Z0-9_]*)",
                    "end": "^(?!\\1    )",
					"beginCaptures": {
						"3": {
							"name": "keyword"
						},
						"4": {
							"name": "variable.name"
						}
					},
                    "patterns": [
						{
							"include": "#blockfunccall"
						}
                    ]
                },
                {
                    "name": "meta.embedded",
                    "begin": "^((    )*)(>>>)(?= )",
                    "end": "^(?!\\1    )",
					"beginCaptures": {
						"3": {
							"name": "keyword"
						}
					},
                    "patterns": [
						{
							"include": "#nml"
						}
                    ]
                },
				{
					"name": "constant.numeric",
					"match": "(?<=((\\(|\\|)))([0-9]+(\\.[0-9]*)?)(?=(\\||\\)))"
				}
            ]
        },
        "inlinefunccall": {
            "patterns": [
                {
                    "name": "variable.name",
					"match": "(!|->)([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.control"
						},
						"2": {
							"name": "variable.name"
						}
					}
                },
                {
                    "name": "string",
                    "begin": "\\[",
                    "end": "(?<!\\\\)\\]",
					"beginCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"endCaptures": {
						"0": {
							"name": "keyword.control"
						}
					}
                },
                {
                    "name": "string",
                    "begin": "\\\"",
                    "end": "(?<!\\\\)\\\"",
					"beginCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"endCaptures": {
						"0": {
							"name": "keyword.control"
						}
					}
                }
            ]
        },
        "blockfunccall": {
            "patterns": [
                {
                    "name": "meta.embedded",
                    "begin": "^((    )*)(<<=)(?= )",
                    "end": "^(?!\\1    )",
					"beginCaptures": {
						"3": {
							"name": "keyword"
						}
					},
                    "patterns": [
						{
							"name": "string.quoted.double.nml",
							"match": " +.*$"
						}
                    ]
                },
                {
                    "name": "meta.embedded",
                    "begin": "^((    )*)(<<<)(?= )",
                    "end": "^(?!\\1    )",
					"beginCaptures": {
						"3": {
							"name": "keyword"
						}
					},
                    "patterns": [
						{
							"include": "#nml"
						}
                    ]
                },
				{
					"name": "invalid",
					"match": "^.*$"
				},
                {
					"name": "string",
                    "begin": "\\[",
                    "end": "(?<!\\\\)\\]",
					"beginCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"endCaptures": {
						"0": {
							"name": "keyword.control"
						}
					}
                },
                {
                    "begin": "\\{",
                    "end": "\\}",
					"beginCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"endCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"patterns": [
						{
							"include": "#nml"
						}
					]
                },
                {
                    "begin": "\\(",
                    "end": "\\)",
					"beginCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"endCaptures": {
						"0": {
							"name": "keyword.control"
						}
					},
					"patterns": [
						{
							"include": "#nml"
						}
					]
                }
            ]
        }
	},
	"scopeName": "source.nml"
}